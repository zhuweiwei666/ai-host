# ----------------------------------
# Server Config
# ----------------------------------
PORT=4000

# ----------------------------------
# MongoDB Atlas
# ----------------------------------
MONGO_URI=mongodb+srv://your_user:your_password@cluster.mongodb.net/?retryWrites=true&w=majority

# ----------------------------------
# AIHubMix（你当前主要使用的平台）
# ----------------------------------
AIHUBMIX_API_KEY=your_aihubmix_api_key
AIHUBMIX_BASE_URL=https://api.aihubmix.com/v1
AIHUBMIX_DEFAULT_MODEL=gpt-4o-mini

# ----------------------------------
# OpenRouter（支持200+模型）
# ----------------------------------
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=openrouter/openai/gpt-4.1
OPENROUTER_SITE_URL=http://localhost:5173      # 可选，用于统计
OPENROUTER_APP_NAME=AI Host Admin              # 可选

# ----------------------------------
# 存储配置 (Storage Config)
# ----------------------------------
# 选择存储类型: 'r2' (Cloudflare R2) 或 'oss' (阿里云 OSS)
STORAGE_TYPE=r2

# ----------------------------------
# Cloudflare R2 配置 (推荐)
# ----------------------------------
# 从 Cloudflare Dashboard -> R2 -> Manage R2 API Tokens 获取
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET=clingai
R2_BASE_PATH=uploads

# R2 公开访问 URL (二选一):
# 方式1: 开启 R2.dev 公开访问后的 URL
# R2_DEV_URL=https://pub-xxxx.r2.dev

# 方式2: 自定义域名 (推荐，需要在 Cloudflare 中绑定域名)
# R2_PUBLIC_URL=https://cdn.yourdomain.com

# ----------------------------------
# 阿里云 OSS 配置 (备用)
# ----------------------------------
# OSS_ACCESS_KEY_ID=your_oss_access_key
# OSS_ACCESS_KEY_SECRET=your_oss_access_secret
# OSS_BUCKET=your_bucket_name
# OSS_REGION=oss-ap-southeast-1
# OSS_ENDPOINT=oss-ap-southeast-1.aliyuncs.com
# OSS_BASE_PATH=uploads

# ----------------------------------
# Upload Config
# ----------------------------------
UPLOAD_DIR=uploads

# ----------------------------------
# Fish Audio 配置
# ----------------------------------
FISH_AUDIO_API_KEY=your_fish_audio_api_key
FISH_AUDIO_API_TOKEN=your_fish_audio_api_token

# ----------------------------------
# Image Generation 配置
# ----------------------------------
IMAGE_GEN_API_KEY=your_image_gen_api_key

# ----------------------------------
# JWT 认证配置
# ----------------------------------
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# ----------------------------------
# Apple Sign In 配置 (iOS 上架必须)
# ----------------------------------
# 你的 App Bundle ID (如 com.yourcompany.clingai)
APPLE_BUNDLE_ID=com.clingai.app

# App Store Connect 共享密钥 (用于 IAP 收据验证)
# 从 App Store Connect -> 我的 App -> App 内购买项目 -> App 专用共享密钥 获取
APPLE_SHARED_SECRET=your_apple_shared_secret

# ----------------------------------
# Google Play 配置 (Android)
# ----------------------------------
# 服务账号邮箱 (用于 Google Play 购买验证)
# GOOGLE_SERVICE_ACCOUNT_EMAIL=xxx@xxx.iam.gserviceaccount.com
# 服务账号私钥 (JSON 格式的 private_key 字段)
# GOOGLE_SERVICE_ACCOUNT_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----
# Android 包名
# ANDROID_PACKAGE_NAME=com.clingai.app

# ----------------------------------
# App 版本控制 (用于强制更新)
# ----------------------------------
# iOS
IOS_MIN_VERSION=1.0.0
IOS_CURRENT_VERSION=1.0.0
IOS_FORCE_UPDATE=false
IOS_UPDATE_URL=https://apps.apple.com/app/idXXXXXXXXX
IOS_UPDATE_MESSAGE=发现新版本，请更新以获得最佳体验

# Android
ANDROID_MIN_VERSION=1.0.0
ANDROID_CURRENT_VERSION=1.0.0
ANDROID_FORCE_UPDATE=false
ANDROID_UPDATE_URL=https://play.google.com/store/apps/details?id=com.clingai.app
ANDROID_UPDATE_MESSAGE=发现新版本，请更新以获得最佳体验
